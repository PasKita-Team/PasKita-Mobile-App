<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bottomnavigation.user.transaksi.TransaksiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/back"
                    android:contentDescription="@string/kembali" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/tvNamaToko"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nama_toko"
                            android:fontFamily="@font/dm_sans_bold"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/secondary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:id="@+id/ivImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:contentDescription="@string/upload_foto"
                                android:src="@drawable/tulisan_paskita"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp">

                                <TextView
                                    android:id="@+id/tvNamaProduk"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/nama_produk"
                                    android:fontFamily="@font/dm_sans_bold"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvHargaProduk"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/harga_produk"
                                    android:fontFamily="@font/dm_sans_bold"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="@color/secondary"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:orientation="horizontal"
                                    android:layout_weight="1"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:id="@+id/ivKurang"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="end"
                                        android:src="@drawable/btn_kurang"
                                        android:contentDescription="@string/title_Keranjang" />

                                    <TextView
                                        android:id="@+id/tvJumlah"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/satu"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:fontFamily="@font/dm_sans_bold"
                                        android:textSize="16sp"
                                        android:textStyle="bold"/>

                                    <ImageView
                                        android:id="@+id/ivTambah"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="end"
                                        android:src="@drawable/btn_tambah"
                                        android:contentDescription="@string/title_Keranjang" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <EditText
                            android:id="@+id/etCatataProduk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/catatan_produk"
                            android:fontFamily="@font/dm_sans_bold"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/masukkan_alamat_pengiriman"
                    android:fontFamily="@font/dm_sans_bold"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:text="@string/alamat_lengkap"
                    android:fontFamily="@font/dm_sans_bold"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <EditText
                            android:id="@+id/etALamatLengkap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/alamat_lengkap"
                            android:fontFamily="@font/dm_sans"
                            android:inputType="text"
                            android:autofillHints="name" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:text="@string/kabupaten_atau_kota"
                    android:fontFamily="@font/dm_sans_bold"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/destinationTIL"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/kabupaten_atau_kota"
                            app:hintEnabled="true">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/destinationAutoCompleteTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:text="@string/provinsi"
                    android:fontFamily="@font/dm_sans_bold"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <EditText
                            android:id="@+id/etProvinsi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/provinsi"
                            android:fontFamily="@font/dm_sans"
                            android:inputType="text"
                            android:autofillHints="name" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:text="@string/layanan_pengiriman_tersedia"
                    android:fontFamily="@font/dm_sans_bold"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/courierTIL"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/layanan_pengiriman_tersedia"
                            app:hintEnabled="true">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/courierAutoCompleteTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btnCekOngkir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/cek_ongkos_kirim"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/transportationLineTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    tools:text="Makassar - Jakarta" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCekOngkir"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    tools:listitem="@layout/item_cost" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvTotalBayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/total_bayar"
                            android:layout_gravity="top"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="-10dp"
                            android:fontFamily="@font/dm_sans_bold"
                            android:textColor="@color/secondary"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <me.abhinay.input.CurrencyEditText
                            android:id="@+id/tvTotalHarga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rp1_000_000"
                            android:enabled="false"
                            android:layout_gravity="top"
                            android:layout_marginStart="5dp"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/dm_sans_bold"
                            android:textColor="@color/secondary"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/belum_termasuk_ongkir"
                            android:layout_gravity="top"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="-10dp"
                            android:fontFamily="@font/dm_sans"
                            android:textColor="@color/primary"
                            android:textSize="8sp" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/btnBayar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center"
                        android:text="@string/bayar"/>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>