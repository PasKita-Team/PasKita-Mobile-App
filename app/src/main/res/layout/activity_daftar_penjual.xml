<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/secondary">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/back"
                android:contentDescription="@string/kembali" />

            <TextView
                android:id="@+id/tvJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="50dp"
                android:text="@string/daftar_sebagai_penjual"
                android:fontFamily="@font/dm_sans_bold"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-30dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:text="@string/foto_profile_toko"
                        android:fontFamily="@font/dm_sans_bold"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvFotoProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ivImage"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/upload_foto"
                                android:layout_gravity="center"
                                android:contentDescription="@string/foto_profile"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginBottom="10dp"
                                android:text="@string/upload_foto"
                                android:fontFamily="@font/dm_sans_bold"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:text="@string/nama_toko"
                        android:fontFamily="@font/dm_sans_bold"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp">

                            <EditText
                                android:id="@+id/etNamaToko"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/nama_toko"
                                android:fontFamily="@font/dm_sans"
                                android:inputType="text"
                                android:autofillHints="name" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:text="@string/alamat_toko_kota_kabupaten"
                        android:fontFamily="@font/dm_sans_bold"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp">

                            <EditText
                                android:id="@+id/etAlamatToko"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/alamat_toko"
                                android:fontFamily="@font/dm_sans"
                                android:inputType="text"
                                android:autofillHints="name" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:text="@string/deskripsi_toko"
                        android:fontFamily="@font/dm_sans_bold"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp">

                            <EditText
                                android:id="@+id/etDesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/deskripsi_toko"
                                android:fontFamily="@font/dm_sans"
                                android:inputType="text"
                                android:autofillHints="name" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:text="@string/verifikasi_berkas_ktp"
                        android:fontFamily="@font/dm_sans_bold"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvFotoKTP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ivKtp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/upload_foto"
                                android:layout_gravity="center"
                                android:contentDescription="@string/upload_foto"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginBottom="10dp"
                                android:text="@string/upload_foto"
                                android:fontFamily="@font/dm_sans_bold"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:text="@string/pembayaran"
                        android:fontFamily="@font/dm_sans_bold"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:text="@string/nama_bank"
                        android:fontFamily="@font/dm_sans_bold"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp">

                            <EditText
                                android:id="@+id/etNamaBank"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/nama_bank"
                                android:fontFamily="@font/dm_sans"
                                android:inputType="text"
                                android:autofillHints="name" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:text="@string/no_rek"
                        android:fontFamily="@font/dm_sans_bold"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp">

                            <EditText
                                android:id="@+id/etNoRek"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/nomor_rekening"
                                android:fontFamily="@font/dm_sans"
                                android:inputType="number"
                                android:autofillHints="name" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <CheckBox
                        android:id="@+id/cbSetuju"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/saya_merupakan_umkm_kecil_dan_menengah"/>

                    <CheckBox
                        android:id="@+id/cbDaftar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/setuju_mendaftar"/>

                    <Button
                        android:id="@+id/btnSimpan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/dm_sans_bold"
                        android:text="@string/simpan"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:padding="15dp"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/primary"/>

                    <Button
                        android:id="@+id/btnUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/dm_sans_bold"
                        android:text="@string/simpan"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:padding="15dp"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/primary"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>