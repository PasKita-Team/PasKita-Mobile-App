<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    style="?attr/materialCardViewElevatedStyle"
    android:id="@+id/cv_story">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorTertiaryContainer">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_story"
            android:layout_width="0dp"
            android:layout_height="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
            tools:src="@tools:sample/avatars"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_favorite_border_24"
            app:layout_constraintBottom_toBottomOf="@+id/iv_story"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.983"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_story"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_name_story"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Nama Produk"
            android:textStyle="bold"
            android:textSize="21sp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/iv_story"
            app:layout_constraintEnd_toStartOf="@id/tv_cratedat_story"
            app:layout_constraintStart_toStartOf="@id/iv_story"/>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="Rp. 12.000"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_story" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="4.8"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.803"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_story" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:src="@drawable/baseline_star_rate_24"
            app:layout_constraintBottom_toTopOf="@+id/appCompatButton2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.956"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_story"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_cratedat_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="March, 24 2014"
            android:textSize="14sp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toEndOf="@id/tv_name_story"
            app:layout_constraintTop_toTopOf="@id/tv_name_story"
            app:layout_constraintBottom_toBottomOf="@id/tv_name_story"
            app:layout_constraintEnd_toEndOf="@id/iv_story"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton2"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_button"
            android:drawableRight="@drawable/baseline_shopping_cart_24"
            android:padding="20dp"
            android:text="Masukkan Keranjang"
            android:textColor="#fff"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">


        </androidx.appcompat.widget.AppCompatButton>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>