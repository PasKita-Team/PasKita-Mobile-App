<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bottomnavigation.user.daftartransaksi.DetailTransaksiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/back"
                    android:contentDescription="@string/kembali" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/tvNamaToko"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nama_toko"
                            android:fontFamily="@font/dm_sans_bold"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/secondary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:id="@+id/ivImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:contentDescription="@string/upload_foto"
                                android:src="@drawable/tulisan_paskita"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp">

                                <TextView
                                    android:id="@+id/tvNamaProduk"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/nama_produk"
                                    android:fontFamily="@font/dm_sans_bold"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvJumlah"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_1_barang"
                                    android:fontFamily="@font/dm_sans"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvHargaProduk"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/harga_produk"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/dm_sans_bold"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@color/secondary"/>

                            </LinearLayout>

                        </LinearLayout>

                        <EditText
                            android:id="@+id/etCatataProduk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/catatan_produk"
                            android:enabled="false"
                            android:fontFamily="@font/dm_sans_bold"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/informasi_pengiriman"
                    android:fontFamily="@font/dm_sans_bold"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:text="@string/no_resi"
                    android:fontFamily="@font/dm_sans_bold"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <EditText
                            android:id="@+id/etResi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/no_resi"
                            android:enabled="false"
                            android:fontFamily="@font/dm_sans"
                            android:inputType="text"
                            android:autofillHints="name" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:text="@string/pembeli"
                    android:fontFamily="@font/dm_sans_bold"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <EditText
                            android:id="@+id/etPembeli"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/pembeli"
                            android:enabled="false"
                            android:fontFamily="@font/dm_sans"
                            android:inputType="text"
                            android:autofillHints="name" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:text="@string/alamat_lengkap"
                    android:fontFamily="@font/dm_sans_bold"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <EditText
                            android:id="@+id/etALamatLengkap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/alamat_lengkap"
                            android:fontFamily="@font/dm_sans"
                            android:inputType="text"
                            android:enabled="false"
                            android:autofillHints="name" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:text="@string/kabupaten_atau_kota"
                    android:fontFamily="@font/dm_sans_bold"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <EditText
                            android:id="@+id/etKota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/provinsi"
                            android:fontFamily="@font/dm_sans"
                            android:inputType="text"
                            android:enabled="false"
                            android:autofillHints="name" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:text="@string/provinsi"
                    android:fontFamily="@font/dm_sans_bold"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <EditText
                            android:id="@+id/etProvinsi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/provinsi"
                            android:fontFamily="@font/dm_sans"
                            android:inputType="text"
                            android:enabled="false"
                            android:autofillHints="name" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:text="@string/ekspedisi_pengiriman"
                    android:fontFamily="@font/dm_sans_bold"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <EditText
                            android:id="@+id/etPengiriman"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/ekspedisi_pengiriman"
                            android:fontFamily="@font/dm_sans"
                            android:inputType="text"
                            android:enabled="false"
                            android:autofillHints="name" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bukti_pembayaran"
                    android:fontFamily="@font/dm_sans_bold"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvFotoProduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivPembayaran"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:src="@drawable/upload_foto"
                            android:layout_gravity="center"
                            android:contentDescription="@string/upload_foto"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btnSelesai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/selesaikan_pesanan"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>